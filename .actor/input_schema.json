{
  "title": "Code Explainer Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "code": {"title": "Code to Explain", "type": "string", "editor": "textarea", "minLength": 10},
    "language": {"title": "Programming Language", "type": "string", "enum": ["javascript", "python", "java", "cpp", "go", "rust", "typescript", "php"], "default": "javascript"},
    "detailLevel": {"title": "Detail Level", "type": "string", "enum": ["brief", "detailed", "beginner-friendly"], "default": "detailed"},
    "includeExamples": {"title": "Include Examples", "type": "boolean", "default": false},
    "model": {"title": "AI Model", "type": "string", "enum": ["openai/gpt-4o", "anthropic/claude-3.5-sonnet"], "default": "openai/gpt-4o"},
    "openrouterApiKey": {"title": "OpenRouter API Key", "type": "string", "isSecret": true}
  },
  "required": ["code", "language", "openrouterApiKey"]
}
